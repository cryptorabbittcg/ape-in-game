# Ape In! Game - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Supabase Configuration (Required for leaderboard/stats, optional for Sandy mode)
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# API Configuration
VITE_API_URL=https://ape-in-game-backend.onrender.com

# Thirdweb Configuration (Optional - can come from arcade session)
VITE_THIRDWEB_CLIENT_ID=your-thirdweb-client-id

# Chain Configuration
VITE_CHAIN_ID=33111
VITE_RPC_URL=https://curtis.rpc.caldera.xyz/http
VITE_CHAIN_NAME=ApeChain Curtis Testnet

# Development Mode (Optional)
# Set to 'true' to allow standalone mode without arcade hub
VITE_ALLOW_STANDALONE=false

# ZKVerify Configuration (Optional)
VITE_USE_ZKVERIFY=false
VITE_ZKVERIFY_API_KEY=
