[Unit]
Description=Ape In! Game Backend API
After=network.target

[Service]
Type=simple
User=apedev
WorkingDirectory=/home/apedev/ape-in-bot/backend
Environment="PATH=/home/apedev/ape-in-bot/backend/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/apedev/ape-in-bot/backend/venv/bin/python -m app.main
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

